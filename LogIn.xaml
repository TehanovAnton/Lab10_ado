<Page x:Class="LabWork10_ado.LogIn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LabWork10_ado"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogIn"
      Background="White">

    <StackPanel>
        <Label Content="NickName" FontSize="30" 
               HorizontalAlignment="Center"/>
        <TextBox x:Name="nickNameInput"/>

        <Label Content="Password" FontSize="30" 
               HorizontalAlignment="Center"/>
        <TextBox x:Name="passwordInput"/>

        <Button Content="Log In" Command="{Binding LogInUser}"/>
    </StackPanel>
</Page>
